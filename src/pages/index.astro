---
import { Image } from 'astro:assets';
import imgRonny from '../assets/ronny.jpg';
import imgWork01 from '../assets/work-01.jpg';

import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import '@fontsource/silkscreen/400.css';
import '@fontsource/silkscreen/700.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Ronny&trade;</title>
	</head>
	<body>

		<div class="gd-wrap">
			<div class="gd">
				<div class="gd-cell cell-emoji cell-1 bg-dark np">
					<div class="ani-container">
					<div class="ani-wave">
						<LottieAnimation src="/animation.json" autoplay="visible" />
					</div>
				</div>
				</div>
				<div class="gd-cell cell-word cell-2"> 
					<div class="center-wrap align-center">
						<p class="fs-2xl">Hello</p>
					</div>
				</div>
				<div class="gd-cell cell-word cell-3">
					<div class="center-wrap align-center">
						<p class="fs-2xl">my</p>
					</div>
				</div>
				<div class="gd-cell cell-word cell-4">
					<div class="center-wrap align-center">
						<p class="fs-2xl">name</p>
					</div>
				</div>
				<div class="gd-cell cell-status cell-5 bg-dark">
					<div class="center-wrap">
						<p class="fs-px fs-px-1 txt-clr-higlight">Yes, I'm available to work on your exciting project</p>
					</div>
				</div>
				<div class="gd-cell cell-status cell-6 bg-dark">
					<div class="center-wrap align-center">
						<span class="icon-circle icon-true">&nbsp;</span>
					</div>
				</div>
				<div class="gd-cell cell-word cell-7">
					<div class="center-wrap align-center">
						<p class="fs-2xl">is</p>
					</div>
				</div>
				<div class="gd-cell cell-brand cell-8 bg-highlight"> 
					<img src="/ronny.svg" class="img-fit img-pd2 img-pdneg1" />
				</div>
				<div class="gd-cell cell-spacer cell-9 empty">
				</div>
				<div class="gd-cell cell-content cell-10 bg-dark">
					<div class="modal" style="background:url('/pattern.png');">
						<header class="modal-header">
							<div class="header-wrap">
								<h5 class="header-bar">Profile Image</h5><span class="header-btn close">&times</span>
							</div>
						</header>
						<div class="modal-content">
							<Image src={imgRonny}  class="img-fit" alt="Ronny Wieckardt" />
						</div>
						<footer class="modal-footer">
							<p>Ronny Wieckardt &mdash; a very rare image because unlike everyone on social media, he doesn't like to be in the spotlight</p>
						</footer>
					</div>
				</div>
				<div class="gd-cell cell-cta cell-11 np">
					<a href="#" class="cta-serif">Say Hi!</a>
				</div>
				<div class="gd-cell cell-12">
					<div class="center-wrap">
					<p class="fs-lg">I make small batch, made-to-order, high quality, digital design. Using one-of-a-kind creative thoughts and state of the art technology.</p>
				</div>
				</div>
				<div class="gd-cell cell-13 empty"></div>
				<div class="gd-cell cell-14">
					<div class="center-wrap align-center">
						<div>
					<p class="fs-serif fs-fact">
						15+
					</p>
					<p class="fs-px fs-px-1">years of experience</p>
				</div>
				</div>
				</div>
				<div class="gd-cell cell-15 np">
					<div class="ani-container">
						<div class="ani-wave">
							<LottieAnimation src="/globe.json" autoplay="visible" />
						</div>
					</div>
				</div>
				<div class="gd-cell cell-16">
					<div class="center-wrap align-center">
						<div class="text-set">
							<p class="fs-px fs-px-1">Live from</p>
							<p class="fs-xl align-center">Rotterdam</p>
						</div>
					</div>
				</div>
				<div class="gd-cell cell-17 bg-dark">
					<div class="modal" style="background:url('/pattern.png');">
						<header class="modal-header">
							<div class="header-wrap">
								<h5 class="header-bar">Selected Work</h5><span class="header-btn close">&times</span>
							</div>
						</header>
						<div class="modal-content">
							<Image src={imgWork01}  class="img-fit" alt="Work 1" />
						</div>
						<footer class="modal-footer">
							<p>Request Portfolio Call</p>
						</footer>
					</div>
				</div>
				<div class="gd-cell cell-18">
					<div class="center-wrap align-center">
						<p class="fs-2xl">I</p>
					</div>
				</div>
				<div class="gd-cell cell-19">
					<div class="center-wrap align-center">
						<p class="fs-2xl">design</p>
					</div>
				</div>
				<div class="gd-cell cell-20">
					<div class="center-wrap align-center">
						<div class="ani-bounce">
							<img src="/mascot.svg" class="logo" alt=""/>
						</div>
					</div>
				</div>
				<div class="gd-cell cell-21">
					<div class="center-wrap align-center">
						<p class="fs-2xl">for</p>
					</div>
				</div>
				<div class="gd-cell cell-22">
					<div class="center-wrap align-center">
						<p class="fs-2xl">digital</p>
					</div>
				</div>
				<div class="gd-cell cell-23">
					<p class="fs-px fs-px-1 ">clients include, but are not limited to:</p>

				</div>
				<div class="gd-cell cell-24">
					<div class="modal" style="background:url('/pattern.png');"></div>
				</div>
				<div class="gd-cell cell-25 np">
					<a href="#" class="cta-serif">Thanks for browsing!</a>
				</div>
				<div class="gd-cell cell-26">
					<div class="center-wrap align-center">
						<a href="#" class="fs-2xl">in</a>
					</div>
				</div>
				<div class="gd-cell cell-27">
					<div class="center-wrap align-center">
					<a href="#" class="fs-2xl">mail</a>
				</div>
				</div>
				<div class="gd-cell cell-28">
					<div class="center-wrap align-right">
					<a href="#" class="fs-2xl">allthis</a>
					</div>
				</div>

				<div class="gd-cell cell-29 no-mobible np">
						<a href="#" class="cta-block">
							<span>
							If you want me to design, direct or discuss the human side of your digital product. <strong>Let's talk!</strong>
						</span>
						</a>
				</div>
				<div class="gd-cell cell-30 no-mobible">
					<div class="modal" style="background:url('/pattern.png');">
					</div>
				</div>
			</div>
		</div>
	</body>
</html>


<style>
	a{
		text-decoration: none;
		color:#222;
	}
	*,html{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html{
		font-size: 16px; //base font-size
	}
	body{
		padding:1.333rem !important;
		font-size: 1rem;
		background-color: #808277;
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		font-weight: normal;
	}
	.img-fit{
		object-fit: cover;
		width:100%;
		height: auto;
	}
	.img-pd2{
		padding:1.5rem;
	}
	.img-pd6{
		padding:6rem;
	}
	.img-pdneg3{
		padding-bottom:3rem;
	}
	.gd-wrap{
		background-color: #000000;
		padding:1px;
	}
	.icon-circle{
		background:#9EFF00;
		display: block;
		width: 3rem;
		height: 3rem;
		border-radius: 3rem;
	}
	.text-set{
		display: block;
	}
	.empty{
		background: 
         linear-gradient(to top left,
             rgba(0,0,0,0) 0%,
             rgba(0,0,0,0) calc(50% - 0.8px),
             rgba(0,0,0,1) 50%,
             rgba(0,0,0,0) calc(50% + 0.8px),
             rgba(0,0,0,0) 100%),
         linear-gradient(to top right,
             rgba(0,0,0,0) 0%,
             rgba(0,0,0,0) calc(50% - 0.8px),
             rgba(0,0,0,1) 50%,
             rgba(0,0,0,0) calc(50% + 0.8px),
             rgba(0,0,0,0) 100%);
	}
	.bg-dark{
		background-color: #000 !important;
	}
	.bg-highlight{
		background-color:#9EFF00!important;
	}
	.txt-clr-higlight{
		color:#9EFF00;
	}
	.gd{
		display: grid;
		grid-template-columns: repeat(5, 1fr);
		grid-template-rows: repeat(32, clamp(4.375rem, 0.2004rem + 13.3588vw, 8.75rem));
		grid-column-gap:1px;
		grid-row-gap: 1px;
	}
	.gd-cell{
		background-color: #808277;
		padding: 0.5rem;
		min-height: 100%;
		overflow: hidden;
	}
	.np{
		padding:0;
	}
	.ani-container{
		display: flex;
		width: 100%;
		height: 100%;
		align-items: center;
		justify-content: center;
		padding:0;
		margin:0;
	}
	.center-wrap{
		display: flex;
		width: 100%;
		height: 100%;
		align-items: center;
		justify-content: start;
		padding:0;
		margin:0;
	}

	.align-center{
		justify-content: center;
		text-align: center;
	}

	.align-right{
		justify-content: right;
		text-align: right;
	}
	.ani-wave{
		width:70px;
	}

	.fs-serif{
		font-family: 'Times New Roman', Times, serif;
		letter-spacing: -0.0125em;
	}
	.fs-fact{
		font-size:clamp(3rem, 0.2004rem + 10.3588vw, 8.75rem);
		font-style: italic;
		font-weight: 700;
		letter-spacing: -0.5rem;
	}

	.cta-serif{
		display: block;
		width:100%;
		height: 100%;
		text-align:center;
		font-family: 'Times New Roman', Times, serif;
		letter-spacing: -0.0125em;
		font-size:clamp(2rem, 0.2004rem + 6.3588vw, 8.75rem);
		line-height: 1.66;
		text-decoration: none;
		background-color: #000;
		color:#9EFF00;

	}
	.cta-block{
		display: flex;
		width:100%;
		height: 100%;
		align-items: center;
		letter-spacing: -0.0125em;
		text-decoration: none;
		background-color: #808277;
		color:#000;
		font-size:1.375rem;
		padding:2rem;
		border:12px solid #000;
		text-wrap:balance;
		line-height: 100%;
	}

