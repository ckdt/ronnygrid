.no-mobible{
	display: none;
}

.modal{
	display: flex;
	height: 100%;
	flex-direction: column;
	padding: 1px;
	background-image: var(--pattern);
}


@keyframes heartbeat {
  0% {
    transform: translate(0%, 0%) scale(1);
  }

  50% {
    transform: translate(0%, 0%) scale(1.5);
  }

  100% {
    transform: translate(0%, 0%) scale(1);
  }
}

.logo {
  animation: heartbeat 1s infinite;
}



.modal-header{
	background-color:white;
}
.modal-content{
	display: flex;
	padding:1px;
	background-color:white;
}

.modal-content img{
	width: 100%; /* or any custom size */
  height: 100%; 
	max-height: calc(70px *5);
  object-fit: cover;
}


.header-wrap{
	display: flex;
	gap: 2px;
	background-color: white;
	padding:1px;
}

.header-bar,
.header-btn{
	padding:4px 8px;
	font-family: 'Silkscreen', system-ui;
	font-size: 12px;
	line-height: 10px;
	font-smooth: never;
	border: 1px solid #41483A;
	background: #808277;
	box-shadow: -2px -2px 0px 0px #75846d inset, 2px 2px 0px 0px #7A896F inset;
	color: #FFF;
	leading-trim: both;
	text-edge: cap;
	text-shadow: 0px 1px 0px #535C4B, 1px 0px 0px #535C4B, -1px 0px 0px #535C4B, 0px -1px 0px #535C4B;
	font-style: normal;
	font-weight: 300;
	line-height: normal;
	letter-spacing: -1.2px;
}
.header-bar{
	flex-grow: 1; 
}
.header-btn{
	padding:1px px 0px 0px;
	min-width:24px;
	font-size:20px;
	line-height: 16px;
	text-align: center;
}

.modal-footer{
	padding:8px;
	background-color: #EDEED5;
	border-bottom: 1px solid #000;
	font-family: 'Silkscreen', system-ui;
	font-size: 10px;
	line-height: 10px;
	font-smooth: never;
	font-weight: 300;
	line-height: normal;
	letter-spacing: -1.2px;
}

	@media (width >= 1023px) {

		.no-mobible{
			display: inherit;
		}


.modal-content img{
	max-height: calc(140px *5);
}

